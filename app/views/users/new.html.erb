<span>

  <h3>Sign Up</h3>

  <%= form_for @user do |f| %>

    <% if @user.errors.any? %>
      <div>
        <div>
          The form contains <%= pluralize(@user.errors.count, "error") %>.
        </div>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    Username: <%= f.text_field :username %><br>
    Email:  <%= f.text_field :email %><br>
    Password:  <%= f.text_field :password %><br>

    <%= f.submit %>

  <% end %>

</span>